run = "cargo test -- --test-threads=1"

onBoot = "bash start.sh"

hidden = [
  "target",
  ".tutorial",
  "db",
  "start.sh",
  "bitcoin.conf",
  "electrs.toml",
  ".config",
  "build.rs",
  "src/lib.solution.rs",
  "src/internal",
  "src/test.rs",
  ".gitignore",
  "Cargo.toml",
  "Cargo.lock",
]
entrypoint = "src/exercises/exercises.rs"

[packager]
language = "rust"

[packager.features]
packageSearch = true

[nix]
channel = "stable-22_11"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[languages]

[languages.rust]
pattern = "**/*.rs"

[languages.rust.languageServer]
start = "rust-analyzer"

[[ports]]
localPort = 8332
externalPort = 3002
exposeLocalhost = true

[[ports]]
localPort = 8333
externalPort = 3001

[[ports]]
localPort = 9735
externalPort = 3003

[[ports]]
localPort = 18443
externalPort = 80

[[ports]]
localPort = 18444
externalPort = 3000

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "cargo test"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Bitcoin Core Node"

[[workflows.workflow]]
name = "Bitcoin Core Node"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"

[workflows.workflow.metadata]
outputType = "console"
